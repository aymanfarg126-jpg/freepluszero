    <script type="module">
        // استدعاء المكتبات الضرورية
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getAuth, signInWithPopup, GoogleAuthProvider } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";
        import { getAnalytics } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-analytics.js";

        // ==================================================
        // إعدادات مشروعك (بياناتك الحقيقية اللي انت بعتها)
        // ==================================================
        const firebaseConfig = {
            apiKey: "AIzaSyBem6YX1d5KwGjG-uGXw5EXgY3_QEqPHzw",
            authDomain: "uyfyktkjg.firebaseapp.com",
            projectId: "uyfyktkjg",
            storageBucket: "uyfyktkjg.firebasestorage.app",
            messagingSenderId: "212734262562",
            appId: "1:212734262562:web:4e1d655d31f6f15fe3f97b",
            measurementId: "G-SGP1PJYTB7"
        };

        // تشغيل التطبيق
        const app = initializeApp(firebaseConfig);
        const analytics = getAnalytics(app);
        const auth = getAuth();
        const provider = new GoogleAuthProvider();

        // 1. برمجة زرار الدخول
        const loginBtn = document.getElementById('googleLoginBtn');
        
        loginBtn.addEventListener('click', () => {
            signInWithPopup(auth, provider)
                .then((result) => {
                    // نجاح الدخول
                    const user = result.user;
                    console.log("User Info:", user); // للتأكد في الكونسول
                    showAppScreen(user);
                }).catch((error) => {
                    // فشل الدخول
                    console.error(error);
                    alert("عذراً، حدث خطأ في الاتصال بجوجل.\n" + error.message);
                });
        });

        // 2. تجهيز الـ 7000 كود
        const codesPool = [];
        // دالة سريعة لتوليد 7000 كود
        (function initCodes() {
            for(let i=0; i<7000; i++) {
                const rand = Math.random().toString(36).substring(2, 8).toUpperCase();
                codesPool.push(`GPT-PLUS-${rand}`);
            }
        })();

        // 3. عرض الشاشة الثانية وتوليد الكود
        function showAppScreen(user) {
            // إخفاء الدخول وإظهار التطبيق
            document.getElementById('loginUI').style.display = 'none';
            document.getElementById('appInterface').style.display = 'flex';

            // وضع بيانات المستخدم الحقيقية
            document.getElementById('userName').innerText = user.displayName;
            document.getElementById('userPhoto').src = user.photoURL;

            // اختيار كود عشوائي
            const finalCode = codesPool[Math.floor(Math.random() * codesPool.length)];
            
            // عرض الكود مع تأثير كتابة
            const codeEl = document.getElementById('generatedCode');
            codeEl.innerText = "Fetching...";
            
            setTimeout(() => {
                codeEl.innerText = finalCode;
                codeEl.style.color = "#10a37f";
                window.currentWinningCode = finalCode; // حفظ الكود للنسخ
            }, 800);
        }

        // 4. وظيفة النسخ والتحويل
        window.copyToClipboard = function() {
            if(window.currentWinningCode) {
                navigator.clipboard.writeText(window.currentWinningCode).then(() => {
                    alert("تم نسخ الكود بنجاح: " + window.currentWinningCode);
                    window.open("https://t.me/freepluszero", "_blank");
                });
            }
        }
    </script>
